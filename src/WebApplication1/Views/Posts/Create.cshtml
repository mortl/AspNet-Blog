@addTagHelper "* , Microsoft.AspNet.Mvc.TagHelpers"
@model AspBlog.Model.Post
@{ 
    Layout = "_Layout";

}

<form asp-action="Create">
    @Html.ValidationSummary()
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        @Html.ValidationMessageFor(_post => _post.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(_post => _post.Body)
        @Html.TextAreaFor(_post => _post.Body)
        @Html.ValidationMessageFor(_post => _post.Body)
    </div>

    <button class=" btn btn-default" type="submit">Create Post</button>

</form>